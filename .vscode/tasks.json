{
  "tasks": [
    {
      "type": "shell",
      "label": "compile debug C",
      "command": "gcc",
      "args": [
        "${file}",
        "-o",
        "${workspaceFolder}\\executables\\${relativeFileDirname}\\${fileBasenameNoExtension}.out",
        "-Wall",
        "-std=c99",
        "-lm",
        "-g",
      ],
      "problemMatcher": [
        "$gcc"
      ],
      "dependsOn": [
        "makedir"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "label": "compile debug C++",
      "command": "g++",
      "args": [
        "${file}",
        "-o",
        "${workspaceFolder}\\executables\\${relativeFileDirname}\\${fileBasenameNoExtension}.out",
        "-Wall",
        "-std=c++17",
        "-lm",
        "-g",
      ],
      "problemMatcher": [
        "$gcc"
      ],
      "dependsOn": [
        "makedir"
      ],
      "group": {
        "kind": "build",
        "isDefault": false
      }
    },
    {
      "type": "shell",
      "label": "clean",
      "command": "rm ${workspaceFolder}\\executables"
    },
    {
      "type": "shell",
      "label": "makedir",
      "command": "mkdir",
      "args": [
        "${workspaceFolder}\\executables\\${relativeFileDirname}",
        "-Force"
      ],
      "hide": true
    }
  ],
  "version": "2.0.0",
  "windows": {
    "options": {
      "shell": {
        "executable": "powershell.exe",
        "args": [
          "-NoLogo",
          "-NoProfile",
          "-Command"
        ]
      }
    }
  }
}